{
    "name": "pandoras-box",
    "version": "1.1.2",
    "description": "A small and simple stress testing tool for Ethereum-compatible blockchain networks",
    "main": "./bin/index.js",
    "types": "./bin/index.d.ts",
    "author": "Milos Zivkovic (zivkovicmilos)",
    "license": "Apache-2.0",
    "devDependencies": {
        "@eslint/js": "^10.0.1",
        "@types/cli-progress": "^3.11.0",
        "@types/node": "^25.0.2",
        "@typescript-eslint/eslint-plugin": "^8.46.4",
        "@typescript-eslint/parser": "^8.46.4",
        "eslint": "^10.0.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.1.3",
        "globals": "^17.0.0",
        "prettier": "3.8.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.0.2",
        "typescript-eslint": "^8.46.4"
    },
    "scripts": {
        "tsc": "tsc",
        "lint": "eslint '**/*.ts' --fix",
        "prettier": "prettier --write .",
        "build": "yarn tsc && yarn chmod",
        "chmod": "chmod u+x ./bin/index.js",
        "prepare": "yarn build",
        "fund": "ts-node src/fund.ts",
        "stats": "ts-node src/statsCollector.ts",
        "prepublishOnly": "yarn lint && yarn prettier"
    },
    "bin": {
