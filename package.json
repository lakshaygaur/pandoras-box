        "@types/cli-table": "^0.3.1",
        "@types/heap": "^0.2.31",
        "axios": "^1.2.1",
        "chalk": "4.1.2",
        "cli-progress": "^3.11.2",
        "cli-table3": "^0.6.3",
        "commander": "^14.0.2",
        "heap": "^0.2.7"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/madz-lab/pandoras-box.git"
    },
    "homepage": "https://docs.madz-lab.com/pandoras-box",
    "files": [
        "bin/**/*"
    ],
